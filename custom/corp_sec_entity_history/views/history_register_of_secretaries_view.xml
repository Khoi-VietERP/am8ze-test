<odoo>
    <data>
        <record id="history_register_of_secretaries_tree" model="ir.ui.view">
            <field name="name">history.register.of.secretaries.tree</field>
            <field name="model">history.register.of.secretaries</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="entity_id"/>
                    <field name="name"/>
                    <field name="new_name"/>
                </tree>
            </field>
        </record>

        <record id="history_register_of_secretaries_form" model="ir.ui.view">
            <field name="name">history.register.of.secretaries.form</field>
            <field name="model">history.register.of.secretaries</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="entity_id"/>
                        </group>
                        <group/>
                    </group>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="title"/>
                            <field name="any_former_names"/>
                            <field name="aliases"/>
                            <field name="usual_residential_address"/>
                        </group>
                        <group>
                            <field name="nric"/>
                            <field name="country_id"/>
                            <field name="date_of_appointment"/>
                            <field name="date_of_cessation"/>
                            <field name="notes"/>
                        </group>
                    </group>
                    <br/><br/><br/>
                    <group>
                        <group>
                            <field name="new_name"/>
                            <field name="new_title"/>
                            <field name="new_any_former_names"/>
                            <field name="new_aliases"/>
                            <field name="new_usual_residential_address"/>
                        </group>
                        <group>
                            <field name="new_nric"/>
                            <field name="new_country_id"/>
                            <field name="new_date_of_appointment"/>
                            <field name="new_date_of_cessation"/>
                            <field name="new_notes"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>